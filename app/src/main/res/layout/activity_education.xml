<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="32dp">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masters In Electrical Engineering"
            android:textSize="16sp"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:textColor="#222222"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Massachusetts Institute Of Technology"
            android:textSize="12sp"
            android:layout_gravity="right"/>
    <View android:layout_width="wrap_content" android:layout_height="2dp"
          android:background="#CCCCCC"
          android:layout_marginBottom="10dp"
          android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masters In Physics"
            android:textSize="16sp"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:textColor="#222222"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Massachusetts Institute Of Technology"
            android:textSize="12sp"
            android:layout_gravity="right"/>
    <View android:layout_width="wrap_content" android:layout_height="2dp"
          android:background="#CCCCCC"
          android:layout_marginBottom="10dp"
          android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bachelors In Electrical Engineering"
            android:textSize="16sp"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:textColor="#222222"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Massachusetts Institute Of Technology"
            android:textSize="12sp"
            android:layout_gravity="right"
            android:textColor="#222222"/>
    <View android:layout_width="wrap_content" android:layout_height="2dp"
          android:background="#CCCCCC"
          android:layout_marginBottom="10dp"
          android:layout_marginTop="10dp"/>
</LinearLayout>